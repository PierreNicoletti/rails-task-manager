<div class="d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <%= link_to edit_task_path(@task), class: "btn btn-secondary h-50" do %>
  <i class="fas fa-pencil-alt"></i> Edit the task
  <% end %>
</div>
<div class="alert alert-secondary" role="alert">
  <%= @task.details %>
</div>
<p>
<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is done.
<% else %>
  <i class="far fa-square"></i> This task is not done yet.
<% end %>
</p>

<%= link_to tasks_path do %>
<i class="fas fa-undo-alt"></i> Back to the list
<% end %>
